rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users 컬렉션: 로그인한 사용자는 자신의 문서만, 관리자는 모든 문서 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || 
         (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'));
    }
    
    // sampleProblems 컬렉션: 모든 사용자가 읽기 가능, 관리자만 쓰기 가능
    match /sampleProblems/{document} {
      allow read: if true;
      allow write: if request.auth != null && 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // feedback 컬렉션: 로그인한 사용자만 읽기/쓰기 가능, 관리자는 삭제 가능
    match /feedback/{postId} {
      allow read, create, update: if request.auth != null;
      allow delete: if request.auth != null && 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // feedback 답글 컬렉션: 로그인한 사용자만 읽기/쓰기 가능
    match /feedback/{postId}/replies/{replyId} {
      allow read, create, update: if request.auth != null;
    }
    
    // pointHistory 컬렉션: 로그인한 사용자만 접근 가능
    match /pointHistory/{document} {
      allow read, write: if request.auth != null;
    }
    
    // payments 컬렉션: 로그인한 사용자는 자신의 결제만, 관리자는 모든 결제 접근 가능
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'));
    }
    
    // pointTransactions 컬렉션: 로그인한 사용자는 자신의 거래만, 관리자는 모든 거래 접근 가능
    match /pointTransactions/{transactionId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'));
    }
    
    // settings 컬렉션: 관리자만 접근 가능
    match /settings/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // notices 컬렉션: 모든 사용자가 읽기 가능, 관리자만 쓰기 가능
    match /notices/{noticeId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // 기타 컬렉션: 로그인한 사용자만 접근 가능
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 